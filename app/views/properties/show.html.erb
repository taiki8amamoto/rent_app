<p><strong>物件名: </strong><%= @property.name %></p>
<p><strong>賃料: </strong><%= @property.rent.to_s(:delimited, delimiter: ',') %>円</p>
<p><strong>住所: </strong><%= @property.address %></p>
<p><strong>築年数: </strong><%= @property.age %>年</p>
<p><strong>備考: </strong><%= @property.note %></p>
<hr>
<% if @property.stations.present? %>
  <% @property.stations.each.with_index(1) do |station, indx| %>
    <h3>最寄り駅<%= indx %></h3>
    <p><strong>路線名: </strong>
    <% if station.line.present? %>
      <%= station.line %>
    <% else %>
      登録なし
    <% end %>
    </p>
    <p><strong>駅名: </strong>
    <% if station.station.present? %>
      <%= station.station %>
    <% else %>
      登録なし
    <% end %>
    </p>
    <p><strong>徒歩分数: </strong>
    <% if station.minute.present? %>
      <%= station.minute %>分
    <% else %>
      登録なし
    <% end %>
    </p>
  <% end %>
  <% else %>
  <h3>最寄り駅</h3>
  <p>登録なし</p>
<% end %>

<%= link_to "編集", edit_property_path(@property.id) %> | 
<%= link_to "戻る", properties_path %>